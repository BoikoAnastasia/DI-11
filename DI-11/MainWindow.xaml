<Window x:Class="DI_11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DI_11"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="650">
    <Grid>
        <Image Source="Image/scale_1200.jpeg" Height="450" Width="800" Grid.ColumnSpan="4" Grid.RowSpan="3"></Image>
        <Button Grid.Row="2" Grid.Column="0" Height="40" Width="140" Grid.ColumnSpan="2">Войти</Button>
        <Button Grid.Row="2" Grid.Column="1" Height="40" Width="140" Grid.ColumnSpan="2">Зарегистрироваться</Button>
        <TextBox Grid.Row="1" Grid.Column="1" Height="40" Width="200" Margin="10,0,6,104">Login</TextBox>
        <TextBox Grid.Row="1" Grid.Column="1" Height="40" Width="200" Margin="6,104,10,0" TextChanged="TextBox_TextChanged">Password</TextBox>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

    </Grid>
</Window>
