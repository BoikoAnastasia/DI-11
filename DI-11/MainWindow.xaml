<Window x:Class="DI_11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DI_11"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="200,50,200,150">
        <TextBlock Text="Введите логин:" FontSize="25"/>
        <TextBox FontSize="25" Name="LoginBox" TextChanged="Input_Changed" />
        <TextBlock Text="Введите пароль" FontSize="25"/>
        <PasswordBox FontSize="25" Name="PasswordBox" PasswordChanged="Input_Changed" />
        <Button Content="Войти" FontSize="25" Margin="20" Click="LogIn_Click" Background="Green" IsEnabled="False" Name="LogInButton"/>
        <TextBlock x:Name="ExeptionBlock" FontSize="15"/>
    </StackPanel>
</Window>
