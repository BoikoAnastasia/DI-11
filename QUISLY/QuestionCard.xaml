<Page x:Class="QUISLY.QuestionCard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QUISLY"
      mc:Ignorable="d" 
      d:DesignHeight="50" d:DesignWidth="345"
      Title="QuestionCard">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock x:Name="questionName" Foreground="Gray" FontSize="20" VerticalAlignment="Center">asdasd</TextBlock>
        <TextBlock x:Name="questionText" Foreground="Gray" Grid.Row="1" FontSize="10" VerticalAlignment="Center">asdasd</TextBlock>
    </Grid>
</Page>
